<%- include("partials/header") %>
    <div class="table-container">
        <h2 class="todo-title">Todo list</h2>
        <div class="text-left">
            <a class="btn" href="/addtodo">Add todo</a>
        </div>
        <div>
            <br>
            <div style="overflow-x: auto;">
            <table>
                <tr>
                    <th> Title </th>
                    <th>Description</th>
                    <th>Created at</th>
                    <th>Updated at</th>
                </tr>
                <tbody>
                    <% for(let i=0; i < todos.length; i++) { %>
                <tr>
                    <td><%= todos[i].title %></td>
                    <td><%= todos[i].desc %></td>
                    <td><%= moment(todos[i].createdAt).format("MM/DD, YYYY, HH:mm") %></td>
                    <td><%= moment(todos[i].updatedAt).format("MM/DD, YYYY, HH:mm") %></td>
                    <td>
                        <a class="btn" href="/updatetodo?id=<%= todos[i]._id %>">Edit</a>
                        <br>
                        <br>
                        <a class="btn" href="/deletetodo?id=<%= todos[i]._id %>">Delete</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
            </table>
        </div>
        </div>
    </div>
    <%- include ("partials/footer") %>